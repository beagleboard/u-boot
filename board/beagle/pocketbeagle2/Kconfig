choice
	prompt "BeagleBoard.org AM6232 based PocketBeagle2 board"
	optional

config TARGET_AM62XX_A53_POCKETBEAGLE2
	bool "BeagleBoard.org AM6232 PocketBeagle2 running on A53"
	select ARM64
	select BINMAN
	select OF_SYSTEM_SETUP

config TARGET_AM62XX_R5_POCKETBEAGLE2
	bool "BeagleBoard.org AM6232 PocketBeagle2 running on R5"
	select CPU_V7R
	select SYS_THUMB_BUILD
	select K3_LOAD_SYSFW
	select RAM
	select SPL_RAM
	select K3_DDRSS
	select BINMAN
	imply SYS_K3_SPL_ATF

endchoice

if TARGET_AM62XX_A53_POCKETBEAGLE2

config SYS_BOARD
       default "pocketbeagle2"

config SYS_VENDOR
       default "beagle"

config SYS_CONFIG_NAME
       default "pocketbeagle2"

source "board/ti/common/Kconfig"

endif

if TARGET_AM62XX_R5_POCKETBEAGLE2

config SYS_BOARD
       default "pocketbeagle2"

config SYS_VENDOR
       default "beagle"

config SYS_CONFIG_NAME
       default "pocketbeagle2"

config SPL_LDSCRIPT
	default "arch/arm/mach-omap2/u-boot-spl.lds"

source "board/ti/common/Kconfig"

endif
